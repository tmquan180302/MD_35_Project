<!-- Thêm thư viện jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        // Lấy đường dẫn URL hiện tại
        var path = window.location.pathname;

        // Xác định mục cần được đánh dấu là active dựa trên đường dẫn
        var activeItem = $('.navbar-nav a[href="' + path + '"]');

        // Thêm lớp "active" cho mục đó
        activeItem.addClass('active');

        // Nếu không tìm thấy mục, hãy thử tìm theo phần đầu của đường dẫn
        if (activeItem.length === 0) {
            activeItem = $('.navbar-nav a[href^="' + path + '"]');
            activeItem.addClass('active');
        }
    });
</script>


</html>