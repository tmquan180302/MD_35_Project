<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <%- include('navBar') %>


        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>FullName</th>
                            <th>Email</th>
                            <th>Phone</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user)=> { %>
                            <tr>
                                <td>
                                    <%= user.fullName %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>0<%= user.phoneNumber %>
                                </td>
                                <td> <a href="/admin/user/edit/<%= user._id %>" class="btn btn-warning">Edit</a></td>
                                <td>
                                    <a href="/admin/user/delete/<%= user._id %>" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this room?')">Delete</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

                <br>
                <form action="/admin/user/add" method="GET"><button type="submit" class="btn btn-success"> Add User
                    </button>
                </form>
                <br>
            </div>
        </div>


</body>

<script>
    function confirmDelete(userId) {
        if (confirm('Are you sure you want to delete this user?')) {
            // Submit form khi xác nhận xóa
            document.getElementById('deleteForm_' + userId).submit();
        }
    }
</script>

</html>