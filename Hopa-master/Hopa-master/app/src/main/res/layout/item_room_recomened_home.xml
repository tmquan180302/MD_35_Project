<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_75sdp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FEA58E"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRatingRoomRcmHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/lato_black"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/baseline_star_24" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imgRoomRcmHome"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="fitXY"
                android:src="@drawable/imgroom" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTypeRoomRcmHome"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_15sdp"
            android:text="Classic Room"
            android:fontFamily="@font/lato_bold"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>


    <Space
        android:layout_width="@dimen/_10sdp"
        android:layout_height="wrap_content"/>

</LinearLayout>