<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.ResetPassForgotActivity">
    <ImageView
        android:id="@+id/imgBackForgotPass"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_back_ios" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo mật khẩu mới"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hay tạo mật khẩu gồm ít nhất 8 chữ cái, cần ít nhất một chữ hoa và một chữ số. Bạn sẽ dùng mật khẩu này để đăng nhập."
            android:textSize="@dimen/_13ssp"
            />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtNewPassForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:hint="Mật khẩu mới"
        android:layout_margin="@dimen/_10sdp"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNewPassForgot"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtNewPassForgotConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:hint="Nhập lại mật khẩu mới"
        android:layout_margin="@dimen/_10sdp"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNewPass"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button

        android:id="@+id/btnDoneForgot"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:text="Xác nhận"
        android:textSize="@dimen/_17sdp" />

</LinearLayout>