<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.ForgotPhoneActivity">
    <ImageView
        android:id="@+id/btnBackPhone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
       android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_back_ios" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvPhoneForgot"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập số điện thoại để lấy lại mật khẩu:"
            android:textSize="@dimen/_13ssp"
             />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPhoneForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:hint="Số di động"
        android:layout_margin="@dimen/_10sdp"
        app:startIconDrawable="@drawable/ic_phone_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPhone"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button

        android:id="@+id/btnNext"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:text="Tiếp theo"
        android:textSize="@dimen/_17sdp" />

</LinearLayout>