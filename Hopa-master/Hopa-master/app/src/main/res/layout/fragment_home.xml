<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Find The Happiness With Us!"
            android:textSize="@dimen/_15sdp" />

<!--        <ImageView-->
<!--            android:layout_width="@dimen/_25sdp"-->
<!--            android:layout_height="@dimen/_25sdp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginLeft="@dimen/_95sdp"-->
<!--            android:src="@drawable/noti_icon" />-->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/lato_bold"
        android:text="Rooms"
        android:textSize="@dimen/_10ssp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvRoomHome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        android:layout_marginLeft="@dimen/_10sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/lato_bold"
        android:text="Services"
        android:textSize="@dimen/_10ssp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvServiceHome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_10sdp"
         />

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/lato_bold"
        android:text="Best Price (Recommended)"
        android:textSize="@dimen/_10ssp" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvRoomHomeRcm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"/>
</LinearLayout>

</LinearLayout>

</ScrollView>